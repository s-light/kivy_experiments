#:kivy 1.9.0

<PongBall>:
    size: 20, 20
    canvas:
        Color:
            rgb: (1, 1, 1)
        Ellipse:
            pos: self.pos
            size: self.size


<PongGate>:
    size: 1, (self.parent.height-2)
    canvas:
        Color:
            rgb: (0.5, 0, 0)
        Rectangle:
            pos:self.pos
            # pos:(0,0)
            size:self.size

<PongPaddle>:
    size: 30, 100
    canvas:
        Color:
            rgba: (1, 0.9, 0.8, 0.9)
        Rectangle:
            pos:self.pos
            size:self.size

<PongPlayer>:
    do_translation:False
    do_rotation:False
    do_scale:False
    scale:1.0
    rotation:self.angle
    paddle: player_paddle
    gate: player_gate
    size: 150, 300
    angle: 0
    myname: None
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: 0, 0, 1
            origin: self.center
    canvas:
        Color:
            rgba: (1, 1, 0, 1)
        Rectangle:
            pos: (0,0)
            size: self.size
    canvas.after:
        PopMatrix
    Label:
        font_size: 70
        center_x: self.parent.width/2
        center_y: self.parent.height/2
        text: str(self.parent.score)
    Label:
        font_size: 20
        # center: self.parent.center
        center_x: self.parent.width/2
        center_y: self.parent.height/2
        # center_y:0
        text: str(self.parent.myname)
        color: (0, 0, 0, 1)
    PongGate:
        id: player_gate
        center_x: player_paddle.center_x
        center_y: self.parent.height/2
    PongPaddle:
        id: player_paddle
        x: 0
        y: 0
        # center_y: self.parent.height/2

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Color:
            rgb: (0.5, 0.5, 0.5)
        Rectangle:
            pos: self.center_x - 5, 0
            size: 4, self.height

    PongPlayer:
        id: player_left
        x: root.x + 200
        y: root.y + 160
        # center_y: root.center_y
        angle: 0
        myname: "Player Left"

    PongPlayer:
        id: player_right
        x: root.width*2
        # x: root.width-self.width
        # x: (root.width/2)
        center_y: root.center_y
        angle: 45
        myname: "Player Right"

    PongBall:
        id: pong_ball
        center: self.parent.center
